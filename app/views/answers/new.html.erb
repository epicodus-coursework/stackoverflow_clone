<div class="container">
  <%= form_for [@question, @answer] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, :class => "form-control", :rows => 8 %>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>
